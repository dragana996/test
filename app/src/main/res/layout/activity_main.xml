<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.MainActivity">

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/download_button"
        android:layout_toRightOf="@+id/download_button"
        android:text="Print"
        android:onClick="Printing"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:id="@+id/inf_textview"
        android:textSize="24sp"
        android:layout_below="@+id/bar_textview"
        android:layout_alignLeft="@+id/bar_textview"
        android:layout_alignStart="@+id/bar_textview" />

    <TextView
        android:text="flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/flow_textview"
        android:layout_below="@+id/cancel_button"
        android:layout_alignLeft="@+id/download_button"
        android:layout_alignStart="@+id/download_button" />

    <TextView
        android:text="bar"
        android:layout_width="100dp"
        android:id="@+id/bar_textview"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/speed_textview"
        android:layout_alignLeft="@+id/flow_textview"
        android:layout_alignStart="@+id/flow_textview" />

    <TextView
        android:id="@+id/speed_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flow_textview"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:text="speed" />

    <Button
        android:text="Download"
        android:id="@+id/download_button"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:textIsSelectable="false"
        android:layout_height="120dp"
        android:layout_width="200dp"
        android:layout_above="@+id/flow_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>